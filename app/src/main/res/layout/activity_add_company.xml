<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:fontFamily="casual"
        android:text="@string/title_comapany_lay"
        android:id="@+id/titlecomapny"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:hint="Company Name"
        android:textColorHint="@color/hint_color"
        android:ems="10"
        android:id="@+id/txt_company_name"
        android:background="@drawable/bg_edittext"
        android:layout_below="@+id/titlecomapny"
        android:layout_alignLeft="@+id/titlecomapny"
        android:layout_alignStart="@+id/titlecomapny"
        android:layout_alignRight="@+id/titlecomapny"
        android:layout_alignEnd="@+id/titlecomapny" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="Address"
        android:textAlignment="center"
        android:background="@drawable/bg_edittext"
        android:textColorHint="@color/hint_color"
        android:id="@+id/txt_address"
        android:layout_below="@+id/txt_company_name"
        android:layout_alignLeft="@+id/txt_company_name"
        android:layout_alignStart="@+id/txt_company_name"
        android:layout_alignRight="@+id/txt_company_name"
        android:layout_alignEnd="@+id/txt_company_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Website Name"
        android:textAlignment="center"
        android:textColorHint="@color/hint_color"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext"
        android:id="@+id/txt_website"
        android:layout_below="@+id/txt_phone_number"
        android:layout_alignRight="@+id/txt_phone_number"
        android:layout_alignEnd="@+id/txt_phone_number"
        android:layout_alignLeft="@+id/txt_phone_number"
        android:layout_alignStart="@+id/txt_phone_number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="phone"
        android:ems="10"
        android:textAlignment="center"
        android:hint="PhoneNumber"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext"
        android:textColorHint="@color/hint_color"
        android:id="@+id/txt_phone_number"
        android:layout_below="@+id/txt_address"
        android:layout_alignLeft="@+id/txt_address"
        android:layout_alignStart="@+id/txt_address"
        android:layout_alignRight="@+id/txt_address"
        android:layout_alignEnd="@+id/txt_address" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:textAlignment="center"
        android:background="@drawable/bg_edittext"
        android:fontFamily="casual"
        android:textSize="20sp"
        android:id="@+id/btn_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="147dp" />

</RelativeLayout>